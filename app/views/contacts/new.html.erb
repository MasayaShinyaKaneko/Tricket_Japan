<% if flash[:notice] %>
	<div id="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h1>Contact Form</h1>
			<%= form_for(@contact, url: contacts_path) do |f| %>
				<div class="field">
					<%= f.label :subject %>
					<%= f.text_field :subject, autofocus: true, placeholder: "subject" %>
				</div>
				<div class="field">
					<%= f.label :content %>
					<%= f.text_area :content, autofocus: true, placeholder: "content" %>
				</div>
				<div class="actions">
					<%= f.submit "send" %>
				</div>
			<% end %>
		</div>
	</div>
</div>