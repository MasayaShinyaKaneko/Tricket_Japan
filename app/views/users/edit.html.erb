<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <div class="profile-edit-headline title_type1">
        <h1>Edit Profile</h1>
      </div>

      <% if flash[:error] %>
        <div id="flash" class="alert alert-danger" role="alert">
          <%= flash[:error] %>
        </div>
      <% end %>
      <% if @user.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for(@user) do |f| %>
      <div class="field">
        <%= f.label :usertype %>
        <%= f.radio_button :type_user, :Traveler, checked: true %>
        <h1 class="label label-default" style="background-color:#f8b500; font-size: 20px;">Travelers</h1>
        <%= f.radio_button :type_user, :Local %>
        <h1 class="label label-default" style="background-color:#9e3d3f; font-size: 20px;">Locals</h1>
      </div>
      <div class="field">
        <%= f.label :firstname %>
        <%= f.text_field :name_first, autofocus: true, placeholder: "first name" %>
      </div>
      <div class="field">
        <%= f.label :lastname %>
        <%= f.text_field :name_last, autofocus: true, placeholder: "last name" %>
      </div>
      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :name_user, autofocus: true, placeholder: "user name" %>
      </div>
      <div class="field">
        <%= f.label :gender %>
        <%= f.select :gender, [["man","man"],["woman","woman"]] %>
      </div>
      <div class="field">
        <%= f.label :birthday %>
        <%= f.datetime_select :birthday, start_year: 1930, end_year: (Time.now.year - 18), default: Date.new(1990, 1, 1),:discard_hour => true, :discard_minute => true %>
      </div>
      <div class="field">
        <%= f.label :nationality %>
        <%= f.select :nationality, @nationality %>
      </div>
      <div class="field">
        <%= f.label :livingcountry %>
        <%= f.select :country, @country %>
      </div>
      <div class="field">
        <%= f.label :native_language %>
        <%= f.select :language_first, @language %>
      </div>
      <div class="field">
        <%= f.label :second_language %>
        <%= f.select :language_second, @language %>
      </div>
      <div class="field">
        <%= f.label :third_language %>
        <%= f.select :language_third, @language %>
      </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="profile-edit-headline title_type1">
       <h1>Option</h1>
      </div>
      <div class="field">
        <%= f.label :profile_picture %>
        <%= f.file_field :picture_profile, accept: 'image/jpeg,image/gif,image/png' %>
      </div>
      <div class="field">
        <%= f.label :background_picture %>
        <%= f.file_field :picture_background, accept: 'image/jpeg,image/gif,image/png' %>
      </div>
      <div class="field">
        <%= f.label :hobby %>
        <%= f.text_field :hobby, autofocus: true, placeholder: "hobby" %>
      </div>

      <div class="field">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction, autofocus: true, placeholder: "introduction", :style=>"width: 300px; height: 100px;" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="actions" style="width: 100%; margin: 0 auto;">
        <%= f.submit "Update", :style=>"background-color: #c77eb5; color: white; width: 100px; border-radius: 5px;" %>
      </div>
      <% end %>
      <h4><%= link_to "mypage", user_path(current_user), class:"label label-default", :style=>"background-color: #c77eb5;" %></h4>
    </div>
  </div>
</div>
