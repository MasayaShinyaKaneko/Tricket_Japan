<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
     <%= form_for(@user) do |f| %>

      <div class="field">
        <%= f.label :usertype %>
        <%= f.select :type_user, [["traveler", 0 ],["local", 1 ]], autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :firstname %>
        <%= f.text_field :name_first, autofocus: true, placeholder: "first name" %>
      </div>

      <div class="field">
        <%= f.label :lastname %>
        <%= f.text_field :name_last, autofocus: true, placeholder: "last name" %>
      </div>

      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :name_user, autofocus: true, placeholder: "user name" %>
      </div>

      <div class="field">
        <%= f.label :gender %>
        <%= f.select :gender, [["man","man"],["woman","woman"]], autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :birthday %>
        <%= f.datetime_select :birthday, start_year: 1930, end_year: (Time.now.year - 18), default: Date.new(1990, 1, 1),:discard_hour => true, :discard_minute => true, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :nationality %>
        <%= f.select :nationality, [["Japanese","Japanese"],["American","American"],["French","French"]], autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :livingcountry %>
        <%= f.select :country, [["Japan","Japan"],["America","America"],["Frence","Frence"]], autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :native_language %>
        <%= f.select :language_first, [["Japanese","Japanese"],["English","English"],["French","French"]], autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :second_language %>
        <%= f.select :language_second, [["N/A",""],["Japanese","Japanese"],["English","English"],["French","French"]], autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :third_language %>
        <%= f.select :language_third, [["N/A",""],["Japanese","Japanese"],["English","English"],["French","French"]], autofocus: true %>
      </div>


      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
      </div>
    </div>
    <div class="col-md-6">
    <h2>Option</h2>
      <div class="field">
        <%= f.label :hobby %>
        <%= f.text_field :hobby, autofocus: true, placeholder: "hobby" %>
      </div>

      <div class="introduction">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction, autofocus: true, placeholder: "introduction" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
