<% if @user.picture_background? %>
	<%= image_tag @user.picture_background.background.url, class: "background" %>
<% else %>
	<%= image_tag "/assets/default.jpg", :size => '400x150', class: "background"  %>
<% end %>
<div class="favorite-headline">
	<h1><%= @user.type_user %></h1>
	<%= link_to "your favorites", user_favorite_page_path(current_user) %>
	<%= link_to "edit profile", edit_user_path(current_user) %>
	<%= link_to "unsubscribe", users_unsubscribe_path(current_user) %>

    <!-- message -->
	<% if @user.id == current_user.id %>
	<% else %>
		<% if @isRoom == true %>
    		<%= link_to "chat", room_path(@roomId) %>
  		<% else %>
	    	<%= form_for @room do |f| %>
	      		<%= fields_for @roomusernew do |e| %>
	        		<%= e.hidden_field :user_id, value:@user.id %>
	    		<% end %>
      			<%= f.submit "new chat" %>
    		<% end %>
  		<% end %>
	<% end %>

	<p>User Name <%= @user.name_user %></p>
	<% if @user.picture_profile? %>
		<%= image_tag @user.picture_profile.profile.url, :style=>"border-radius: 150px;" %>
	<% else %>
		<%= image_tag "/assets/default.jpg", :size => '150x150', :style=>"border-radius: 150px;" %>
	<% end %>
</div>

<!-- travelers用とlocals用必要 -->

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="favorite-Tricket-headline">
				<h1>Your favorites</h1>
			</div>
			<% @users.each do |user| %>
			<div class="favorite-Tricket-content">
				<p><%= link_to "#{user.name_user}" ,user_path(user) %></p>
				<p><%= user.nationality %></p>
			</div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="favorite-Tricket-headline">
				<h1>Favorite Trickets</h1>
			</div>
			<% @posts.each do |p| %>
			<div class="favorite-Tricket-content">
				<%= p.title %>
				<%= p.status_display %>
				<%= p.area %>
				<%= p.season %>
				<%= p.interest %>
				<%= link_to "Tricket detail", post_path(p.id) %>
			</div>
			<% end %>
			<%= link_to "mypage", user_path(current_user) %>
		</div>
	</div>
</div>