<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <div class="signup-headline title_type1">
        <h1>Sign up</h1>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <% if @view == 0 %>
        <div class="field">
          <%= f.label :usertype %>
          <%= f.radio_button :type_user, :Traveler, checked: true %>
          <h1 class="label label-default" style="background-color:#f8b500; font-size: 20px;">Travelers</h1>
          <%= f.radio_button :type_user, :Local %>
          <h1 class="label label-default" style="background-color:#9e3d3f; font-size: 20px;">Locals</h1>
        </div>
        <% elsif @view == 1 %>
        <div class="field">
          <%= f.label :usertype %>
          <%= f.radio_button :type_user, :Traveler %>
          <h1 class="label label-default" style="background-color:#f8b500; font-size: 20px;">Travelers</h1>
          <%= f.radio_button :type_user, :Local, checked: true %>
          <h1 class="label label-default" style="background-color:#9e3d3f; font-size: 20px;">Locals</h1>
        </div>
        <% end %>

        <div class="field">
          <%= f.label :firstname %>
          <%= f.text_field :name_first, autofocus: true, placeholder: "first name" %>
        </div>

        <div class="field">
          <%= f.label :lastname %>
          <%= f.text_field :name_last, autofocus: true, placeholder: "last name" %>
        </div>

        <div class="field">
          <%= f.label :username %>
          <%= f.text_field :name_user, autofocus: true, placeholder: "user name" %>
        </div>

        <div class="field">
          <%= f.label :gender %>
          <%= f.select :gender, [["man","man"],["woman","woman"]], autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :birthday %>
          <%= f.datetime_select :birthday, start_year: 1930, end_year: (Time.now.year - 18), default: Date.new(1990, 1, 1),:discard_hour => true, :discard_minute => true, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :nationality %>
          <%= f.select :nationality, @nationality %>
        </div>

        <div class="field">
          <%= f.label :livingcountry %>
          <%= f.select :country, @country %>
        </div>

        <div class="field">
          <%= f.label :native_language %>
          <%= f.select :language_first, @language %>
        </div>

        <div class="field">
          <%= f.label :second_language %>
          <%= f.select :language_second, @language %>
        </div>

        <div class="field">
          <%= f.label :third_language %>
          <%= f.select :language_third, @language %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirmation"  %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="signup-headline title_type1">
          <h1>Option</h1>
        </div>
        <div class="field">
          <%= f.label :profile_picture %>
          <%= f.file_field :picture_profile, accept: 'image/jpeg,image/gif,image/png' %>
        </div>
        <div class="field">
          <%= f.label :background_picture %>
          <%= f.file_field :picture_background, accept: 'image/jpeg,image/gif,image/png' %>
        </div>
        <div class="field">
          <%= f.label :hobby %>
          <%= f.text_field :hobby, autofocus: true, placeholder: "hobby", :style=>"width: 250px;" %>
        </div>

        <div class="field">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction, autofocus: true, placeholder: "introduction", :style=>"width: 300px; height: 100px;" %>
        </div>
      </div>
    </div>
  <div class="row">
    <div class="col-md-12">
      <div class="actions" style="width: 100%; margin: 0 auto;">
        <%= f.submit "Sign up", :style=>"background-color: #c77eb5; color: white; width: 100px; border-radius: 5px;" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

