	<div class="row" style="background-color:#EFE9D1;">
		<div class="col-md-12">
		<h3 style="text-align: center; margin: 10px 0;"><%= link_to "Back to Trickets", posts_top_path, class:"label label-default", :style=>"background-color: #c77eb5;" %></h3>
		</div>
