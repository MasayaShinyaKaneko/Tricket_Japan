<% if flash[:notice] %>
	<div id="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class="container-fluid">
	<div class="row">
		<div class="Trickets-top-background1">
			<div class="col-md-12">
				<h1>Trickets&Travelers</h1>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<h1>Most liked Trickets</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="Trickets-top-headline">
				<h1>Trickets</h1>
				<%= form_tag(posts_sort_path, method: :get) do %>
					<%= label_tag "area" %>
					<%= hidden_field_tag :search_flag, 1 %>
					<%= select_tag "area", options_for_select(@area) %>
					<%= submit_tag "search" %>
				<% end %>
				<%= form_tag(posts_sort_path, method: :get) do %>
					<%= label_tag "season" %>
					<%= hidden_field_tag :search_flag, 2 %>
					<%= select_tag "season", options_for_select(@season) %>
					<%= submit_tag "search" %>
				<% end %>
				<%= form_tag(posts_sort_path, method: :get) do %>
					<%= label_tag "interest" %>
					<%= hidden_field_tag :search_flag, 3 %>
					<%= select_tag "interest", options_for_select(@interest) %>
					<%= submit_tag "search" %>
				<% end %>
			</div>
			<% @posts.first(2).each do |post| %>
			<div class="Trickets-top-content">
				<p><%= link_to "#{post.user.name_user}" ,user_path(post.user.id) %></p>
				<p><%= post.user.nationality %></p>
				<p><%= post.area %></p>
				<p><%= post.season %></p>
				<p><%= post.interest %></p>
				<p><%= post.title %></p>
				<p><%= link_to "Tricket detail" ,post_path(post) %></p>
			</div>
			<% end %>
			<%= link_to "See more Trickets", posts_path %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="travelers-top-headline">
				<h1>Travelers</h1>
				<%= form_tag(users_travelers_search_path, method: :get) do %>
					<%= label_tag "traveler_name" %>
					<%= hidden_field_tag :search_flag, 1 %>
					<%= text_field_tag :user_search %>
					<%= submit_tag "search" %>
				<% end %>
				<%= form_tag(users_travelers_search_path, method: :get) do %>
					<%= label_tag "nationality" %>
					<%= hidden_field_tag :search_flag, 2 %>
					<%= select_tag "nationality", options_for_select(@nationality) %>
					<%= submit_tag "search" %>
				<% end %>
				<%= form_tag(users_travelers_search_path, method: :get) do %>
					<%= label_tag "language" %>
					<%= hidden_field_tag :search_flag, 3 %>
					<%= select_tag "language", options_for_select(@language) %>
					<%= submit_tag "search" %>
				<% end %>
			</div>
			<% @users.first(2).each do |user| %>
			<div class="travelers-index-content">
				<p><%= user.name_user %></p>
				<p><%= link_to "userpage" ,user_path(user) %></p>
			</div>
			<% end %>
			<%= link_to "See more Travelers", users_travelers_path %>
		</div>
	</div>
</div>